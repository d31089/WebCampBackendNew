<h1>Books</h1>
<table>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>
	
	<% @books.each do |book| %>
		<tr>	
			<th>
				<%= book.title %>
			</th>
			<th>
				<%= book.body %>
			</th>
			<th><%= link_to "Show", book_path(book.id) %></th>
			<th><%= link_to "Edit", edit_book_path(book.id) %></th>
			<th><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
		</tr>	
	<% end %>
	
</table>
<% if @book.errors.any? %>
	<h2><%= @book.errors.count %> errors </h2>
		<div class="alert alert-warning">
    		<ul>
      			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
        		<% end %>
     		</ul>
     	</div>
	<% end %>
<h1>New book</h1>
<%= form_for(@book) do |f| %>
	
	<h4>New Book</h4>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Create Book' %>
<% end %>