<h1>Books</h1>
<table>
	<tr>
		<th>title</th>
		<th>body</th>
	</tr>
	
	<% @books.each do |book| %>
		<tr>	
			<th>
				<%= book.title %>
			</th>
			<th>
				<%= book.body %>
			</th>
			<th><%= link_to "show", book_path(book.id) %></th>
			<th><%= link_to "edit", edit_book_path(book.id) %></th>
			<th><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
		</tr>	
	<% end %>
	
</table>
<h1>New book</h1>
<%= form_for(@book) do |f| %>
	<%= render 'layouts/error_message', model: f.object %>
	<h4>New Book</h4>
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'create book' %>
<% end %>