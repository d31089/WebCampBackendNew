<% if @book.errors.any? %>
	<h2><%= @book.errors.count %> errors </h2>
	<div class="alert alert-warning">
    	<ul>
    		<% @book.errors.full_messages.each do |message| %>
       			<li><%= message %></li>
       		<% end %>
    	</ul>
    </div>
<% end %>
<h1>編集画面</h1>
<%= form_for(@book) do |f| %>
	<h4>title</h4>
	<%= f.text_field :title %>
	<h4>body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
	<br>
	<%= link_to "Show", book_path(@book) %>
	<%= link_to "Back", books_path %>
<% end %>